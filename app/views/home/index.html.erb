<section class='home-page'>   <!-- TODO: use id instead of class -->
  
  <% if current_user %>
    <h1 id='user-name'></h1>
    <h2 id='user-title'></h2>
    <p id='user-email' class='email'><%= current_user.email %></p>
    <ul id='user-highlights'></ul>
  <% else %>
    <h1>Biodb</h1>

    <nav>
      <%= link_to 'sign in', new_session_path %>
      <%= link_to 'sign up', new_user_path %>
    </nav>
  <% end %>

</section>


<% if current_user %>
  <script>
    user = {
      name: "<%= current_user.name %>",
      title: "<%= current_user.title %>"
    };
    user_id = "<%= current_user.id %>";
    user_highlights_data = "<%= (current_user.highlights || '').gsub(/\n/, '\n') %>";
  </script>
<% end %>
